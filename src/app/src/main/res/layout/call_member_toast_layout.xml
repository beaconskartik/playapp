<?xml version="1.0" encoding="utf-8"?><!-- Layout for Pre-call (outgoing video, connecting video) -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="vm" type="com.chthakur.playapp.CallToastManager.VmCallToast" />
    </data>
    <LinearLayout
        android:id="@+id/call_toast_layout_root"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/call_member_toast_background">
        <TextView android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{vm.title}"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
</layout>