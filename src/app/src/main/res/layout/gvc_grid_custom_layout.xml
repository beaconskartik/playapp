<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorRed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GvcAbsoluteGridLayout
        android:id="@+id/gvc_grid_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRed">
    </GvcAbsoluteGridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/gvc_grid_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:orientation="horizontal">
            <com.chthakur.playapp.MainFrameLayout
                android:id="@+id/gvc_grid_row1_col1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/call_gradient_variation1"
                android:layout_height="match_parent">
            </com.chthakur.playapp.MainFrameLayout>
            <com.chthakur.playapp.MainFrameLayout
                android:id="@+id/gvc_grid_row1_col2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/call_gradient_variation2"
                android:layout_height="match_parent">
            </com.chthakur.playapp.MainFrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gvc_grid_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRed"
            android:orientation="horizontal">
            <com.chthakur.playapp.MainFrameLayout
                android:id="@+id/gvc_grid_row2_col1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/call_gradient_variation3"
                android:layout_height="match_parent">
            </com.chthakur.playapp.MainFrameLayout>
            <com.chthakur.playapp.MainFrameLayout
                android:id="@+id/gvc_grid_row2_col2"
                android:background="@drawable/call_gradient_variation4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </com.chthakur.playapp.MainFrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gvc_thumb_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
    </LinearLayout>
</FrameLayout>
